<h1>Task Manager</h1>

  <ul>
    <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %>
      <%= task.details %>
      <%= task.completed %>
      <%= link_to 'Edit', edit_task_path(task) %>
      <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you super sure?'} %>
    </li>
    <% end %>
  </ul>

  <%= link_to 'Create New', new_task_path %>

